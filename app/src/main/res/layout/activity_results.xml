<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Results"
    android:orientation="vertical"
    android:background="@color/white">
    <TextView
        android:layout_marginTop="85dp"
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/purpur"
        android:text="Результат расчета"
        android:textSize="36dp"
        android:textStyle="bold"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@color/light_blue"
        android:layout_marginTop="41dp"
        android:layout_marginBottom="41dp">
        <TextView
            android:id="@+id/resmetres"
            android:layout_width="160dp"
            android:layout_height="35dp"
            android:background="@drawable/corners"
            android:backgroundTint="@color/white"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_marginTop="110dp"
            android:textSize="12sp"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:text="количество метров - ">

        </TextView>
        <TextView
            android:id="@+id/res"
            android:layout_width="160dp"
            android:layout_height="55dp"
            android:background="@drawable/corners"
            android:backgroundTint="@color/white"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_marginTop="133dp"
            android:textSize="12sp"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:text="результат\n"></TextView>
        <Button
            android:layout_width="350dp"
            android:layout_height="70dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="52dp"
            android:background="@drawable/corners"
            android:backgroundTint="@color/purple_blue"
            android:gravity="center"
            android:text="Регистрация"
            android:onClick="GoAut"
            android:textColor="@color/white"
            android:textSize="24sp"
            android:textStyle="bold" />
    </LinearLayout>
</LinearLayout>